<Window x:Class="Bindings.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bindings"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <Style TargetType="ProgressBar">
            <Setter Property="Margin" Value="10,10,0,0"/>
        </Style>
    </Window.Resources>
    <StackPanel>
        <Slider x:Name="mySlider" Minimum="0" Maximum="50"/>
        <ProgressBar Height="20"
                     Maximum="{Binding ElementName=mySlider, Path=Maximum}"
                     Value="{Binding ElementName=mySlider, Path=Value}"/>
        <TextBox Text="{Binding ElementName=mySlider, Path=Value}"/>
    </StackPanel>
</Window>
