<UserControl x:Class="HalloWPF.Controls.Image"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HalloWPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <Image Source="http://lorempixel.com/400/200/technics"
           Stretch="Fill" StretchDirection="Both" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="5"/>
                    <RotateTransform Angle="33"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Path Stroke="Black" StrokeThickness="4" 
        Data="M 80,200 A 100,50 45 1 0 100,50" />
    </StackPanel>
</UserControl>
