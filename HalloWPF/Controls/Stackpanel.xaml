<UserControl x:Class="WPFControls.Controls.Stackpanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFControls.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UniformGrid Columns="2">
        <StackPanel Orientation="Horizontal">
            <Button Content="M!"></Button>
            <Button Content="X!"></Button>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Button Content="Das Muh ist mit dir!"></Button>
            <Button Content="Das Muh ist mit mir!"></Button>
        </StackPanel>
    </UniformGrid>
</UserControl>
